  <% } %>

  <script>
    const userRole = '<%= user.role %>';
    let allDrivers = <%- JSON.stringify(drivers) %>;

    // Load drivers on page load
    document.addEventListener('DOMContentLoaded', () => {
      renderDrivers(allDrivers);
      
      // Add event listeners for filters
      document.getElementById('searchInput').addEventListener('input', applyFilters);
      document.getElementById('statusFilter').addEventListener('change', applyFilters);
      document.getElementById('fahrzeugtypFilter').addEventListener('change', applyFilters);
    });

    function applyFilters() {
      const search = document.getElementById('searchInput').value.toLowerCase();
      const status = document.getElementById('statusFilter').value;
      const fahrzeugtyp = document.getElementById('fahrzeugtypFilter').value;

      let filtered = allDrivers;

      if (search) {
        filtered = filtered.filter(d => 
          d.vorname.toLowerCase().includes(search) ||
          d.nachname.toLowerCase().includes(search) ||
          d.email.toLowerCase().includes(search) ||
          d.rufnummer.includes(search) ||
          d.kennzeichen.toLowerCase().includes(search)
        );
      }

      if (status !== 'alle') {
        filtered = filtered.filter(d => d.status === status);
      }

      if (fahrzeugtyp !== 'alle') {
        filtered = filtered.filter(d => d.fahrzeugtyp === fahrzeugtyp);
      }

      renderDrivers(filtered);
    }

    function renderDrivers(drivers) {
      const tbody = document.getElementById('driversTableBody');
      
      if (drivers.length === 0) {
        tbody.innerHTML = `
          <tr>
            <td colspan="9" class="px-6 py-12 text-center text-gray-500">
              Keine Fahrer gefunden
            </td>
          </tr>
        `;
        return;
      }

      tbody.innerHTML = drivers.map(driver => `
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#${driver.id}</td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium text-gray-900">${driver.vorname} ${driver.nachname}</div>
            <div class="text-sm text-gray-500">${driver.email}</div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${driver.rufnummer}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${driver.fahrzeugtyp}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-mono">${driver.kennzeichen}</td>
          <td class="px-6 py-4 whitespace-nowrap">
            ${driver.sticker ? 
              '<span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full bg-green-100 text-green-800">OK</span>' :
              '<span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full bg-gray-100 text-gray-600">â€”</span>'
            }
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            ${driver.app ? 
              '<span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full bg-green-100 text-green-800">OK</span>' :
              '<span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full bg-gray-100 text-gray-600">â€”</span>'
            }
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            ${userRole === 'partner' ? `
              <select onchange="changeStatus(${driver.id}, this.value)" class="px-3 py-1 text-xs font-semibold rounded-full ${getStatusClass(driver.status)} border-0 cursor-pointer">
                <option value="aktiv" ${driver.status === 'aktiv' ? 'selected' : ''}>Aktiv</option>
                <option value="inaktiv" ${driver.status === 'inaktiv' ? 'selected' : ''}>Inaktiv</option>
                <option value="neu" ${driver.status === 'neu' ? 'selected' : ''}>Neu</option>
              </select>
            ` : `
              <span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full ${getStatusClass(driver.status)}">
                ${driver.status === 'aktiv' ? 'Aktiv' : driver.status === 'inaktiv' ? 'Inaktiv' : 'Neu'}
              </span>
            `}
          </td>
          ${userRole === 'admin' ? `
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <button onclick="openEditModal(${driver.id})" class="text-blue-600 hover:text-blue-900 font-medium">
                Bearbeiten
              </button>
            </td>
          ` : ''}
        </tr>
      `).join('');
    }

    function getStatusClass(status) {
      if (status === 'aktiv') return 'bg-green-100 text-green-800';
      if (status === 'inaktiv') return 'bg-red-100 text-red-800';
      return 'bg-blue-100 text-blue-800';
    }

    async function changeStatus(driverId, newStatus) {
      try {
        const response = await fetch(`/api/drivers/${driverId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ status: newStatus })
        });

        if (response.ok) {
          const result = await response.json();
          const driverIndex = allDrivers.findIndex(d => d.id === driverId);
          if (driverIndex !== -1) {
            allDrivers[driverIndex].status = newStatus;
          }
          updateStats();
          applyFilters();
        }
      } catch (error) {
        alert('Fehler beim Aktualisieren des Status');
      }
    }

    function updateStats() {
      const stats = {
        total: allDrivers.length,
        aktiv: allDrivers.filter(d => d.status === 'aktiv').length,
        inaktiv: allDrivers.filter(d => d.status === 'inaktiv').length,
        neu: allDrivers.filter(d => d.status === 'neu').length
      };
      
      document.getElementById('stat-total').textContent = stats.total;
      document.getElementById('stat-aktiv').textContent = stats.aktiv;
      document.getElementById('stat-inaktiv').textContent = stats.inaktiv;
      document.getElementById('stat-neu').textContent = stats.neu;
    }

    <% if (user.role === 'admin') { %>
    function openAddModal() {
      document.getElementById('addModal').classList.remove('hidden');
    }

    function closeAddModal() {
      document.getElementById('addModal').classList.add('hidden');
      document.getElementById('addDriverForm').reset();
    }

    function openEditModal(driverId) {
      const driver = allDrivers.find(d => d.id === driverId);
      if (!driver) return;

      document.getElementById('editDriverId').value = driver.id;
      document.getElementById('editVorname').value = driver.vorname;
      document.getElementById('editNachname').value = driver.nachname;
      document.getElementById('editEmail').value = driver.email;
      document.getElementById('editRufnummer').value = driver.rufnummer;
      document.getElementById('editFahrzeugtyp').value = driver.fahrzeugtyp;
      document.getElementById('editKennzeichen').value = driver.kennzeichen;
      document.getElementById('editStatus').value = driver.status;
      document.getElementById('editSticker').checked = driver.sticker;
      document.getElementById('editApp').checked = driver.app;

      document.getElementById('editModal').classList.remove('hidden');
    }

    function closeEditModal() {
      document.getElementById('editModal').classList.add('hidden');
    }

    document.getElementById('addDriverForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const data = {
        vorname: formData.get('vorname'),
        nachname: formData.get('nachname'),
        email: formData.get('email'),
        rufnummer: formData.get('rufnummer'),
        fahrzeugtyp: formData.get('fahrzeugtyp'),
        kennzeichen: formData.get('kennzeichen'),
        status: formData.get('status'),
        sticker: formData.get('sticker') === 'on',
        app: formData.get('app') === 'on'
      };

      try {
        const response = await fetch('/api/drivers', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (response.ok) {
          const result = await response.json();
          allDrivers.push(result.driver);
          updateStats();
          applyFilters();
          closeAddModal();
        }
      } catch (error) {
        alert('Fehler beim HinzufÃ¼gen des Fahrers');
      }
    });

    document.getElementById('editDriverForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const driverId = document.getElementById('editDriverId').value;
      const data = {
        vorname: document.getElementById('editVorname').value,
        nachname: document.getElementById('editNachname').value,
        email: document.getElementById('editEmail').value,
        rufnummer: document.getElementById('editRufnummer').value,
        fahrzeugtyp: document.getElementById('editFahrzeugtyp').value,
        kennzeichen: document.getElementById('editKennzeichen').value,
        status: document.getElementById('editStatus').value,
        sticker: document.getElementById('editSticker').checked,
        app: document.getElementById('editApp').checked
      };

      try {
        const response = await fetch(`/api/drivers/${driverId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (response.ok) {
          const result = await response.json();
          const driverIndex = allDrivers.findIndex(d => d.id === parseInt(driverId));
          if (driverIndex !== -1) {
            allDrivers[driverIndex] = result.driver;
          }
          updateStats();
          applyFilters();
          closeEditModal();
        }
      } catch (error) {
        alert('Fehler beim Aktualisieren des Fahrers');
      }
    });

    async function deleteDriver() {
      if (!confirm('MÃ¶chten Sie diesen Fahrer wirklich lÃ¶schen?')) return;

      const driverId = document.getElementById('editDriverId').value;

      try {
        const response = await fetch(`/api/drivers/${driverId}`, {
          method: 'DELETE'
        });

        if (response.ok) {
          allDrivers = allDrivers.filter(d => d.id !== parseInt(driverId));
          updateStats();
          applyFilters();
          closeEditModal();
        }
      } catch (error) {
        alert('Fehler beim LÃ¶schen des Fahrers');
      }
    }
    <% } %>
  </script>
